{
  "name": "global-chat-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:next": "next dev",
    "build:server": "tsc --project tsconfig.server.json",
    "dev:server": "node dist/server.js",
    "dev": "npm-run-all --parallel dev:next dev:server",
    "build": "next build && npm run build:server",
    "start:frontend": "next start",
    "start:backend": "node dist/server.js",
    "start": "npm-run-all --parallel start:frontend start:backend",
    "lint": "next lint"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "lucide-react": "^0.525.0",
    "next": "15.3.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}